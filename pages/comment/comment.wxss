#imgpano {
    width: 100%;
    height: 12em;
}

#comment {
    border: 0px solid #000;
    width: 100%;
    height: 29px;
    border-bottom-left-radius: 10px;
    border-top-left-radius: 10px; 
    background: #686868;
    color: #fff;
    font-size: small;
}
#sendbtn{
    border-bottom-left-radius: 0px;
    border-top-left-radius: 0px;
    border-bottom-right-radius: 10px;
    border-top-right-radius: 10px;
    color: #fff;
    background: #686868;
}
#sendbtn::after{
    border: 0px;
}
#userarea {
    background: #484848;
    margin-top: -5px;
}

#vrshow {
    font-size: xx-small;
}

#commenttext {
    background: #686868;
    border: 0px solid #fff;
    
    width: 95%;
    border-radius: 6px;
    margin-left: 18rpx;
    margin-top: 5px;
}
#bottombar{
    margin-top: 5px;
    margin-left: 8px;
    display: -webkit-box;
    display: -webkit-flex;
}
#userAvatar{
    margin-top: 3px;
    margin-left: 6px;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
    
}
